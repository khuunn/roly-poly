# Trading mode: "paper" or "live"
TRADING_MODE=paper

# Telegram notifications
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Database: "sqlite" or "postgres"
DATABASE_TYPE=sqlite
DATABASE_URL=

# Live trading only (ignored in paper mode)
PRIVATE_KEY=
FUNDER_ADDRESS=

# Strategy parameters
INITIAL_CAPITAL=1000.0
BET_SIZE=10.0
MAX_BET_SIZE=5
CONFIDENCE_THRESHOLD=0.6
MAX_ENTRY_PRICE=1.0

# Position sizing ("fixed" or "dynamic")
SIZING_MODE=fixed
POSITION_SIZE_PCT=0.02
MIN_BET_SIZE=1.0

# Market scanning
MARKET_SCAN_INTERVAL=30
PRICE_HISTORY_MINUTES=30

# Risk management (circuit breaker)
MAX_DRAWDOWN_LIMIT=0.2
MAX_DAILY_LOSS=50.0

# Ensemble strategy
IMBALANCE_THRESHOLD=1.5
ENSEMBLE_MIN_VOTES=2

# VPS / Deployment (GitHub Actions Secrets)
VPS_HOST=
VPS_USER=deploy
VPS_SSH_KEY=
